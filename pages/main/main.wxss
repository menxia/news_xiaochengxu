/* pages/main/main.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.navbar{
  flex: none;
  display: flex;
  background: #fff;
  background-color: #7EC0EE;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 80rpx;
}
.item{
  color: #fff;
  font-weight: 100
}

.item.active{
  font-weight: 600 
}

.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  /* background: #FFCC00; */
}

.hotNews-wrapper{
  position: relative;
  padding-top: 250rpx;
  padding-bottom: 40rpx;
  margin: 10rpx;
  margin-bottom: 30rpx;
}

.hotNews-title{
  color: #fff;
  font-size: 40rpx;
  line-height: 56rpx;
  margin-left: 20rpx;
}

.hotNews-metadata{
  display: flex;
  position: absolute;
  top: -1;
  left: -1;
  margin-left: 20rpx
}

.hotNews-source{
  color:whitesmoke;
  font-size: 25rpx;
  line-height: 35rpx;
  opacity: 0.6;
  margin-right: 20rpx
}

.hotNews-date{
  color:whitesmoke;
  font-size: 25rpx;
  line-height: 35rpx;
  opacity: 0.6
}


.hotNews-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.news-row{
  display: flex;
  margin-bottom: 30rpx;
  height: 170rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);

}

.news-title{
  color: black;
  font-size: 35rpx;
  line-height: 49rpx;
  margin-right: 10rpx;
  margin-left: 10rpx;
  margin-bottom: 5rpx;
  width: 500rpx
}

.news-metadata{
  display: flex;
  position: absolute;
  top: -1;
  left: -1;
  margin-left: 10rpx;
}

.news-source{
  color:darkgray;
  font-size: 25rpx;
  line-height: 35rpx;
  opacity: 0.6;
  margin-right: 20rpx
}

.news-date{
  color:darkgray;
  font-size: 25rpx;
  line-height: 35rpx;
  opacity: 0.6
}

.news-img {
  width: 240rpx;
  height: 150rpx;
  margin-right: 10rpx;
}